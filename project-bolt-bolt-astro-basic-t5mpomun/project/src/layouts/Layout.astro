---
import '@fontsource/bubblegum-sans';
import '@fontsource/comic-neue';
import '@fontsource/fredoka-one';
import '@fontsource/quicksand';
import '@fontsource/comfortaa';
import '@fontsource/varela-round';
import Nav from '../components/Nav';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />
		<meta name="generator" content={Astro.generator} />
		<title>Deep Pepe | Dive into the Future of Crypto</title>
		<style is:global>
			.section-gradient {
				background-image: 
					linear-gradient(45deg, rgba(13, 71, 161, 0.95), rgba(33, 150, 243, 0.95), rgba(79, 195, 247, 0.95));
				background-size: cover;
				background-position: center;
				background-attachment: fixed;
				position: relative;
				overflow: hidden;
			}
			
			.section-gradient::before {
				content: '';
				position: absolute;
				top: -50%;
				left: -50%;
				width: 200%;
				height: 200%;
				background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 50%);
				opacity: 0;
				transition: opacity 0.3s ease;
				pointer-events: none;
				transform: translate3d(0,0,0);
			}
			
			.section-gradient:hover::before {
				opacity: 1;
				animation: shimmer 2s infinite;
			}
			
			@keyframes shimmer {
				0% {
					transform: translate(-30%, -30%) rotate(0deg);
				}
				100% {
					transform: translate(30%, 30%) rotate(360deg);
				}
			}

			/* Fix for iOS devices */
			@supports (-webkit-touch-callout: none) {
				.section-gradient {
					background-attachment: scroll;
				}
			}

			/* Text Shadow Classes */
			.text-glow {
				text-shadow: 0 0 5px rgba(79, 195, 247, 0.7), 0 0 10px rgba(33, 150, 243, 0.5);
			}
			
			.text-shadow-deep {
				text-shadow: 2px 2px 0 #0D47A1, 4px 4px 8px rgba(79, 195, 247, 0.6);
			}
			
			.text-shadow-water {
				text-shadow: 0 0 5px rgba(79, 195, 247, 0.7), 0 0 10px rgba(33, 150, 243, 0.5);
			}
			
			/* Text Gradient */
			.text-gradient {
				background: linear-gradient(to bottom, #FFD54F, #2196F3);
				-webkit-background-clip: text;
				-webkit-text-fill-color: transparent;
				background-clip: text;
			}
		</style>
	</head>
	<body class="min-h-screen font-comfortaa text-white scroll-smooth bg-deep-blue">
		<Nav client:load />
		<slot />
	</body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    overflow-x: hidden;
  }

  /* Smooth section transitions */
  html {
    scroll-behavior: smooth;
  }

  /* Fix for mobile viewport height issues */
  @supports (-webkit-touch-callout: none) {
    .min-h-screen {
      min-height: -webkit-fill-available;
    }
  }
</style>